<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MainActivity">

    <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/idMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraTargetLat="-7.795580"
            mapbox:mapbox_cameraTargetLng="110.3398252"
            mapbox:mapbox_cameraZoom="10" />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/white"
            android:elevation="4.0dp"
            android:id="@+id/showDetail"
            android:layout_margin="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:visibility="gone">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Dari : "
                android:textSize="15sp"
                android:id="@+id/fromText"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/fromText"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:id="@+id/from"
                android:text="Fidi Agency"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/fromText"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Ke : "
                android:textSize="15sp"
                android:id="@+id/toText"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/from"
                app:layout_constraintLeft_toRightOf="@+id/toText"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:id="@+id/to"
                android:text="Perum Melati"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12KM"
                android:textSize="16sp"
                android:id="@+id/distance"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@android:color/holo_orange_dark"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Pelanggan"
                android:textSize="14sp"
                android:id="@+id/person"
                app:layout_constraintTop_toBottomOf="@+id/distance"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/holo_orange_light"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDetail"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="detail"
                android:textSize="15sp"
                app:layout_constraintLeft_toRightOf="@+id/prev"
                app:layout_constraintRight_toLeftOf="@+id/next"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginBottom="10dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Prev"
                android:id="@+id/prev"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:background="@android:color/holo_red_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Next"
                android:id="@+id/next"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:background="@android:color/holo_blue_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>